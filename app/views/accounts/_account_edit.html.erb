<div class="block">
  <div class="secondary-navigation">
    <ul class="wat-cf">
      <li class="first"><%= link_to  "#{t("activerecord.models.#{model}")} #{eval("@#{model}.name")}", @box %></li>
      <li class="last active"><%= link_to "Alterar #{t("activerecord.models.account")} #{@account.id}", "#" %></li>
    </ul>
  </div>
    <div class="content">
      <div class="inner">

      <% form_for :account, @account, :url => send("#{model}_edit_account_path", eval("@#{model}")), :html => { :class => :form } do |f| -%>
        <div class="columns wat-cf">
          <div class="column left">
            <%= render(:partial => "accounts/details_show") %>
          </div>
          <div class="column right">
            <%= render(:partial => "accounts/form_payment", :locals => {:f => f}) %>
          </div>
        </div>

        <div class="group navform wat-cf">
          <button class="button" type="submit">
            <%= image_tag("web-app-theme/tick.png", :alt => "#{t("web-app-theme.save", :default => "Save")}") %> <%= t("web-app-theme.save", :default => "Save") %>
          </button>
          <%= link_to "#{image_tag("web-app-theme/cross.png", :alt => "#{t("web-app-theme.cancel", :default => "Cancel")}")} #{t("web-app-theme.cancel", :default => "Cancel")}", send("#{model.pluralize}_path", eval("@#{model}")), :class => "button" %>
        </div>
      <% end %>

        <p />

      </div>
    </div>
  </div>

  <% content_for :sidebar, render(:partial => 'sidebar_item', :locals => {:model => "account", :menu_visible => false }) -%>
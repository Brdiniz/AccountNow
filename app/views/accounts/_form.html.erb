
  <div class="group">
    <%= f.label :box_id, t("activerecord.attributes.account.box_id", :default => "Box Id"), :class => :label %>
    <%= f.select :box_id, Box.all.collect{|b| [b.name,b.id]}, :include_blank => true %>
  </div>

  <div class="group">
    <%= f.label :bank_account_id, t("activerecord.attributes.account.bank_account_id", :default => "Bank Account Id"), :class => :label %>
    <%= f.select :bank_account_id, BankAccount.all.collect{|b| [b.name,b.id]}, :include_blank => true %>
  </div>

  <div class="group">
    <%= f.label :kind, t("activerecord.attributes.account.kind", :default => "Kind"), :class => :label %>
    <%= f.select :kind, Account::KINDS, :include_blank => true %>
  </div>

  <div class="group">
    <%= f.label :document, t("activerecord.attributes.account.document", :default => "Document"), :class => :label %>
    <%= f.text_field :document, :class => 'text_field' %>
  </div>

  <div class="group">
    <%= f.label :maturity_date, t("activerecord.attributes.account.maturity_date", :default => "Maturity Date"), :class => :label %>
    <%= f.text_field :maturity_date, :class => 'text_field' %>
  </div>

  <div class="group">
    <%= f.label :price, t("activerecord.attributes.account.price", :default => "Price"), :class => :label %>
    <%= f.text_field :price, :class => 'text_field' %>
  </div>

<div class="group navform wat-cf">
  <button class="button" type="submit">
    <%= image_tag("web-app-theme/tick.png", :alt => "#{t("web-app-theme.save", :default => "Save")}") %> <%= t("web-app-theme.save", :default => "Save") %>
  </button>
  <%= link_to "#{image_tag("web-app-theme/cross.png", :alt => "#{t("web-app-theme.cancel", :default => "Cancel")}")} #{t("web-app-theme.cancel", :default => "Cancel")}", @person, :class => "button" %>
</div>


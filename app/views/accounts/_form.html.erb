
  <div class="group">
    <%= f.label :kind, t("activerecord.attributes.account.kind", :default => "Kind"), :class => :label %>
    <%= f.select :kind, Account::KINDS, :include_blank => true %>
  </div>

  <div class="group">
    <%= f.label :maturity_date, t("activerecord.attributes.account.maturity_date", :default => "Maturity Date"), :class => :label %>
    <%= f.text_field :maturity_date, :class => 'text_field' %>
  </div>

  <div class="group">
    <%= f.label :price, t("activerecord.attributes.account.price", :default => "Price"), :class => :label %>
    <%= f.text_field :price, :class => 'text_field' %>
  </div>

<div class="group navform wat-cf">
  <button class="button" type="submit">
    <%= image_tag("web-app-theme/tick.png", :alt => "#{t("web-app-theme.save", :default => "Save")}") %> <%= t("web-app-theme.save", :default => "Save") %>
  </button>
  <%= link_to "#{image_tag("web-app-theme/cross.png", :alt => "#{t("web-app-theme.cancel", :default => "Cancel")}")} #{t("web-app-theme.cancel", :default => "Cancel")}", @person, :class => "button" %>
</div>


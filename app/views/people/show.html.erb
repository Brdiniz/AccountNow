<div class="block">
  <div class="secondary-navigation">
    <ul class="wat-cf">
      <li class="first active"><%= link_to "#{@person.name}", "#" %></li>
    </ul>
  </div>
  <div class="content">
    <div class="inner">
        <p>
          <b><%= t("activerecord.attributes.people.name", :default => t("activerecord.labels.name", :default => "Name")) %>:</b>
          <%= @person.name %>
        </p>

        <p>
          <b><%= t("activerecord.attributes.people.tipe", :default => t("activerecord.labels.tipe", :default => "Tipo")) %>:</b>
          <%= @person.tipe %>
        </p>

        <p>
          <b><%= t("activerecord.attributes.people.address", :default => t("activerecord.labels.address", :default => "Address")) %>:</b>
          <%= @person.address %>
        </p>
      <div class="wat-cf">
        <%= link_to "#{image_tag("web-app-theme/application_edit.png", :alt => "#{t("web-app-theme.edit", :default=> "Edit")}")} #{t("web-app-theme.edit", :default=> "Edit")}", edit_person_path(@person), :class => "button" %>
        <%= link_to "#{image_tag("web-app-theme/cross.png", :alt => "#{t("web-app-theme.delete", :default=> "Delete")}")} #{t("web-app-theme.delete", :default => "Delete")}", people_path(@person), :method => "delete", :class => "button", :confirm => "#{t("web-app-theme.confirm", :default => "Are you sure?")}" %>
      </div>


      <p />

      <table class="table" id="accounts_table">
        <th class="first">ID</th>
        <th>Caixa</th>
        <th>Tipo</th>
        <th>Data do vencimento</th>
        <th>Valor</th>
        <th></th>
        <th class="last"></th>
        <% @person.accounts.each do |account| %>
          <tr class='<%= cycle("odd", "even") %>'>
            <td><%= link_to  account.id , [@person, account] %></td>
            <td><%= account.box.name %></td>
            <td><%= account.kind %></td>
            <td><%= account.maturity_date %></td>
            <td><%= account.price %></td>
            <td></td>
            <td>
              <%= link_to "#{t("web-app-theme.show", :default => "Show")}", "#" %> |
              <%= link_to "#{t("web-app-theme.edit", :default => "Edit")}", edit_person_account_path(@person, account) %> |
              <%= link_to "#{t("web-app-theme.delete", :default => "Delete")}", [@person, account], :method => :delete, :confirm => "#{t("web-app-theme.confirm", :default => "Are you sure?")}" %>
            </td>
          </tr>
        <% end %>
      </table>

    </div>
  </div>
</div>

<% content_for :sidebar, render(:partial => 'sidebar') -%>


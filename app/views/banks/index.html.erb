<div class="block">
  <div class="secondary-navigation">
    <ul class="wat-cf">
      <li class="first active"><%= link_to "#{t("web-app-theme.list", :default => "List")}", banks_path  %></li>
      <li><%= link_to "#{t("web-app-theme.new", :default => "New")}", new_bank_path %></li>
    </ul>
  </div>
  <div class="content">
    <h2 class="title"><%= t("web-app-theme.all", :default => "All")  %> Banks</h2>
    <div class="inner">
      <table class="table">
        <tr>
          <th class="first">
            <%= t("activerecord.attributes.bank.code", :default => t("activerecord.labels.code", :default => "Code")) %>
          </th>
          <th>
            <%= t("activerecord.attributes.bank.name", :default => t("activerecord.labels.name", :default => "Name")) %>
          </th>
          <th class="last">&nbsp;</th>
        </tr>
        <% @banks.each do |bank| -%>
        <tr class="<%= cycle("odd", "even") %>">
          <td class="first">
            <%= link_to bank.code, bank_path(bank) %>
          </td>
          <td>
            <%= bank.name %>
          </td>
          <td class="last">
            <%= link_to "#{t("web-app-theme.show", :default => "Show")}", bank_path(bank) %> |
            <%= link_to "#{t("web-app-theme.edit", :default => "Edit")}", edit_bank_path(bank) %> |
            <%= link_to "#{t("web-app-theme.delete", :default => "Delete")}", bank_path(bank), :method => :delete, :confirm => "#{t("web-app-theme.confirm", :default => "Are you sure?")}" %>
          </td>
        </tr>
        <% end -%>
      </table>
      <div class="actions-bar wat-cf">
        <div class="actions">
        </div>

      </div>
    </div>
  </div>
</div>

<% content_for :sidebar, render(:partial => 'sidebar') -%>


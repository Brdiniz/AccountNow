      <table class="table">
        <tr>
          <th class="first">ID</th>
          <th><%= t("activerecord.attributes.bank_account.name", :default => t("activerecord.labels.name", :default => "Name")) %></th>
          <th><%= t("web-app-theme.created_at", :default => "Created at")  %></th>
          <th class="last">&nbsp;</th>
        </tr>
        <% @bank_accounts.each do |bank_account| -%>
        <tr class="<%= cycle("odd", "even") %>">
          <td>
            <%= bank_account.id %>
          </td>
          <td>
            <%= link_to bank_account.name, bank_account_path(bank_account) %>
            </td>
          <td>
            <%= bank_account.created_at %>
          </td>
          <td class="last">
            <%= link_to "#{t("web-app-theme.show", :default => "Show")}", bank_account_path(bank_account) %> |
            <%= link_to "#{t("web-app-theme.edit", :default => "Edit")}", edit_bank_account_path(bank_account) %> |
            <%= link_to "#{t("web-app-theme.delete", :default => "Delete")}", bank_account_path(bank_account), :method => :delete, :confirm => "#{t("web-app-theme.confirm", :default => "Are you sure?")}" %>
          </td>
        </tr>
        <% end -%>
      </table>


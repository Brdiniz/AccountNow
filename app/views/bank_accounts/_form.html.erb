
  <div class="group">
    <%= f.label :bank_id, t("activerecord.attributes.account.bank_id", :default => "Bank Id"), :class => :label %>
    <%= f.select :bank_id, Bank.all.collect{|b| [b.name,b.id]}, :include_blank => true %>
  </div>

  <div class="group">
    <%= f.label :name, t("activerecord.attributes.bank_account.name", :default => "Name"), :class => :label %>
    <%= f.text_field :name, :class => 'text_field' %>
  </div>

  <div class="group">
    <%= f.label :opening_balance, t("activerecord.attributes.bank_account.opening_balance", :default => "Opening balance"), :class => :label %>
    <%= f.text_field :opening_balance, :class => 'text_field' %>
  </div>

  <div class="group">
    <%= f.label :opening_balance_date, t("activerecord.attributes.bank_account.opening_balance_date", :default => "Opening balance date"), :class => :label %>
    <%= f.date_select :opening_balance_date, :class => 'date_select' %>
  </div>

<div class="group navform wat-cf">
  <button class="button" type="submit">
    <%= image_tag("web-app-theme/tick.png", :alt => "#{t("web-app-theme.save", :default => "Save")}") %> <%= t("web-app-theme.save", :default => "Save") %>
  </button>
  <%= link_to "#{image_tag("web-app-theme/cross.png", :alt => "#{t("web-app-theme.cancel", :default => "Cancel")}")} #{t("web-app-theme.cancel", :default => "Cancel")}", bank_accounts_path, :class => "button" %>
</div>


<div class="block">
  <div class="secondary-navigation">
    <ul class="wat-cf">
      <li class="first active"><%= link_to "Caixa #{@box.name}", "#" %></li>
    </ul>
  </div>
  <div class="content">
    <div class="inner">
        <p>
          <b><%= t("activerecord.attributes.box.name", :default => t("activerecord.labels.name", :default => "Name")) %>:</b>
          <%= @box.name %>
        </p>
      <div class="wat-cf">
        <%= link_to "#{image_tag("web-app-theme/application_edit.png", :alt => "#{t("web-app-theme.edit", :default=> "Edit")}")} #{t("web-app-theme.edit", :default=> "Edit")}", edit_box_path(@box), :class => "button" %>
        <%= link_to "#{image_tag("web-app-theme/cross.png", :alt => "#{t("web-app-theme.delete", :default=> "Delete")}")} #{t("web-app-theme.delete", :default => "Delete")}", box_path(@box), :method => "delete", :class => "button", :confirm => "#{t("web-app-theme.confirm", :default => "Are you sure?")}" %>
      </div>



      <p />

      <table class="table" id="accounts_table">
        <th class="first">ID</th>
        <th>Cliente / Fornecedor</th>
        <th>Tipo</th>
        <th>Data do vencimento</th>
        <th>Valor</th>
        <th class="last">&nbsp;</th>
        <% @box.accounts.each do |account| %>
          <tr class='<%= cycle("odd", "even") %>'>
            <td><%= link_to  account.id , "#" %></td>
            <td><%= account.person.name %></td>
            <td><%= account.kind %></td>
            <td><%= account.maturity_date %></td>
            <td><%= account.price %></td>
            <td>
              <%= link_to "#{t("web-app-theme.show", :default => "Show")}", "#" %> |
              <%= link_to "#{t("web-app-theme.edit", :default => "Edit")}", "#" %>
            </td>
          </tr>
        <% end %>
      </table>

    </div>
  </div>
</div>

<% content_for :sidebar, render(:partial => 'sidebar') -%>

